resource "aws_dynamodb_table" "player" {
  name           = "Player-${var.donate_craft_version}"
  billing_mode   = "PROVISIONED"
  read_capacity  = 20
  write_capacity = 20
  hash_key       = "id"

  attribute {
    name = "id"
    type = "S"
